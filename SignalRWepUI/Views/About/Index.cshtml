@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımızda Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımızda alanı ile ilgili işlemleri gerçekleştirebilirsiniz.
							Tema bütünlüğü için sadece bir tane hakkımızda alanı oluşturmayı unutmayın.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@if (Model != null)
								{
									@foreach (var item in Model)
									{
										<tr>
											<td>@item.Title</td>
											<td>@item.Description</td>
											<td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-outline-danger">SİL</a></td>
											<td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-outline-success">GÜNCELLE</a></td>
										</tr>
									}

								}
							</tbody>
						</table>
						<a href="/About/CreateAbout/" class="btn-outline-primary">Yeni Hakkımda Alanı Girişi</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>

