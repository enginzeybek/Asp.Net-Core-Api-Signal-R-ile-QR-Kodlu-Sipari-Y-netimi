@model UpdateMenuTableDto
@{
    ViewData["Title"] = "UpdateMenuTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Masa İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Masayı Güncelle</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="MenuTableID" />
							<div class="form-group">
								<label for="Name">Masa İsmini Giriniz</label>
								<input type="text" class="form-control" asp-for="Name" id="Name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Status">Masa Durumunu Giriniz</label>
								<input type="text" class="form-control" asp-for="Status" id="Status">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Masayı Güncelle</button>

						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

